<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.technikum.tolanzeilinger.tourplanner.view.MainController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <columnConstraints>
        <ColumnConstraints percentWidth="30.0" />
        <ColumnConstraints percentWidth="70.0" />
      <ColumnConstraints />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints fillHeight="true" />
        <RowConstraints fillHeight="true" />
        <RowConstraints fillHeight="true" />
        <RowConstraints percentHeight="Infinity" />
    </rowConstraints>

    <HBox GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
        <Button maxWidth="Infinity" text="File" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Edit" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Options" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Help" HBox.hgrow="ALWAYS" />
    </HBox>
    <TextField promptText="Search" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1" />
    <AnchorPane GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.rowSpan="2">
        <children>
            <TabPane maxHeight="Infinity" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <tabs>
                    <Tab text="Tours">
                        <content>
                            <fx:include source="listPanel/tour-list.fxml"></fx:include>
                        </content>
                    </Tab>
                </tabs>
            </TabPane>
            <fx:include AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="1.0" source="listPanel/tour-list-action-buttons.fxml"></fx:include>
        </children>
    </AnchorPane>

    <AnchorPane GridPane.columnIndex="1" GridPane.rowIndex="2">
        <children>
            <fx:include source="mainPanel/main-tab-pane-switcher.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" ></fx:include>
        </children>
    </AnchorPane>

    <AnchorPane GridPane.columnIndex="1" GridPane.rowIndex="3">
        <children>
            <TabPane maxHeight="Infinity" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <tabs>
                    <Tab text="Tour Logs">
                        <content>
                            <VBox maxHeight="Infinity">
                                <TableView VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn text="Date" />
                                        <TableColumn text="Duration" />
                                        <TableColumn text="Distance" />
                                    </columns>
                                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                                </TableView>
                            </VBox>
                        </content>
                    </Tab>
                </tabs>
            </TabPane>
            <fx:include source="logPanel/tour-logs-action-buttons.fxml" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="1.0"></fx:include>
        </children>
    </AnchorPane>

    <VBox GridPane.columnIndex="2" GridPane.rowIndex="3" />

</GridPane>
